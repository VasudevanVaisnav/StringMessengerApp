<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SuccessRegister"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/successanimelay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sucessreg"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/animation1" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/failreg"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:lottie_autoPlay="true"
                android:visibility="invisible"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/error" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Registeredtext"
            android:visibility="invisible"
            android:textColor="@color/dark_grey"
            android:layout_gravity="center"
            android:textSize="16dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Registeragaintext"
            android:text="Please Sign-Up Again"
            android:visibility="gone"
            android:textColor="@color/dark_grey"
            android:layout_gravity="center"
            android:textSize="16dp" />

        <TextView
            android:visibility="invisible"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Redirectingtext"
            android:text="Redirecting to Login page"
            android:textColor="@color/dark_grey"
            android:layout_gravity="center"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>